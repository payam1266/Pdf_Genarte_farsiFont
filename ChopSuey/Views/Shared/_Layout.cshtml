@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" lang="en-US" />
    <title>Aerilas</title>
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <style>

        body {
            scroll-behavior: smooth;
            background-color: #e9ecef;
            margin: 0px;
            direction:rtl;
            text-align:right
        }

        .containerSearch {
            position: relative;
            width: 300px;
        }

        #inputSearch {
            width: 100%;
            height: 40px;
            padding: 10px;
            font-size: 16px;
            border-radius: 7px
        }

        .suggestSearch {
            position: absolute;
            top: 42px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-height: 170px;
            overflow-y: auto;
            display: none;
            background-color: #fff;
            z-index: 1;
            padding: 7px;
        }

        .suggestionitem {
            padding: 10px;
            cursor: pointer;
            border-radius: 7px;
            
            font-size: 14px;
        }

            .suggestionitem:hover {
                background-color: #ccc24a;
            }

        #btnSearch {
            background-color: #fdcf46;
            color: #fff;
            padding: 7px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            border-radius: 50%;
            height: 40px;
            margin-left: 5px;
            text-align: center;
            align-content: start
        }

            #btnSearch:hover {
                background-color: #2196F3;
                transform: scale(1.06);
            }

    </style>
</head>
<body style=" background-color:#e9ecef;margin:0px;">

    <nav id="hnav" class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <a class="navbar-brand text-light" id="ablack" asp-action="Index" asp-controller="Home" style="color:black;background-color:#fdcf46;width:150px;text-align:center">


                <span id="spanbrand" style="font-weight:900;color:#000;">دیده بان</span>
            </a>
            <button class="navbar-toggler shadow border-0 bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active   text-light " aria-current="page" href="#top" style="font-weight:700;">صفحه اصلی</a>
                    </li> 
                   
                  
                    <li class="nav-item dropdown">

                        <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="font-weight:700">
                            @inject UserManager<ApplicationUser> usermansger
                            @if (User.Identity.IsAuthenticated)
                            {
                                ApplicationUser user = await usermansger.FindByEmailAsync(User.Identity.Name);
                                <img class="img-fluid" width="20px" href="" /> @($"{user.firstName}  {user.lastName}")
                                ;
                                var userid = user.Id;
                                <input id="inpuid" hidden="hidden" value="@userid" />
                            }
                            else
                            {

                                @("مهمان")
                            }

                        </a>


                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (User.Identity.IsAuthenticated == false)
                            {
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Account" style="text-align:right">ثبت نام</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Account" style="text-align:right">ورود</a></li>
                            }

                            else
                            {
                                <li><a class="dropdown-item" asp-action="LogOut" asp-controller="Account" style="text-align:right">خروج</a></li>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    var userid = User.Identity.Name;

                                    <li><a class="dropdown-item" asp-action="UserPanel" asp-controller="Account" asp-route-userid="@userid" style="text-align:right">پنل کاربری</a></li>
                                }
                            }

                        </ul>
                    </li>

                </ul>


                <div class="containerSearch ">
                    <div class="d-flex float-end" style="margin-left:30px">
                        <input type="text" id="inputSearch" placeholder="جستجو...">
                        <button id="btnSearch"><img src="~/pictuere/search_fill0_wght400_grad0_opsz24.svg" style="padding:2px" /> </button>
                    </div>
                    <div class="suggestSearch" id="containerSuggest"></div>
                </div>

            </div>
        </div>
    </nav>

    @RenderBody();
    <footer style="padding:50px">
        <div class="rowfooter">
            <div class="colfooter">
                <img src="~/pictuere/screenshot 2023-09-30 111644.png" class="logofooter shadow-lg" style="width:60%;border-radius:50%;" />
            </div>
            <div class="colfooter">
                <h3>آدرس</h3>
                <p>ایران فارس</p>
                <p>شیراز شهرک آرین</p>
                <p>خیابان سفیر امید 8/5</p>
                <p>payamghaznavi24@gmail.com</p>
            </div>
            <div class="colfooter">
                <h3>لینک ها</h3>
                <ul class="ulfooter">
                    <li><a asp-action="Index" asp-controller="Home" style="color:#fdcf46">صفحه اصلی</a></li>
                    <li><a asp-action="FAQ" asp-controller="Home">پرسش و پاسخ</a></li>
                </ul>
            </div>
            <div class="colfooter">
                <h3>خبر نامه</h3>
                <form class="formfooter">
                    <img src="~/pictuere/envelope_png18366.png" style="width:40px;" />
                    <input type="email" placeholder="ایمیل خود را وارد کنید..." required />
                    <button class="btn btn-sm btn-outline-warning" type="submit">ارسال</button>
                </form>
            </div>
        </div>
        <hr />
        <p class="ms-auto text-center">2023 - All Right Reserved By DiDeBan</p>
    </footer>


   
</body>
</html>





